<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_jny_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="여행 이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="날짜(클릭하세요)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_jny_name"
        app:layout_constraintStart_toStartOf="@+id/et_jny_name"
        app:layout_constraintTop_toBottomOf="@+id/et_jny_name" />

    <EditText
        android:id="@+id/et_cpn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="친구1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_date"
        app:layout_constraintStart_toStartOf="@+id/et_date"
        app:layout_constraintTop_toBottomOf="@+id/et_date" />

    <EditText
        android:id="@+id/et_cpn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="친구2"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_cpn1"
        app:layout_constraintStart_toStartOf="@+id/et_cpn1"
        app:layout_constraintTop_toBottomOf="@+id/et_cpn1" />

    <EditText
        android:id="@+id/et_cpn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="친구3"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_cpn2"
        app:layout_constraintStart_toStartOf="@+id/et_cpn2"
        app:layout_constraintTop_toBottomOf="@+id/et_cpn2" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="등록"
        app:layout_constraintEnd_toEndOf="@+id/et_cpn3"
        app:layout_constraintStart_toStartOf="@+id/et_cpn3"
        app:layout_constraintTop_toBottomOf="@+id/et_cpn3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="새로운 여행"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_submit" />

    <ImageView
        android:id="@+id/img_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="@+id/et_jny_name"
        app:layout_constraintTop_toTopOf="@+id/et_jny_name"
        app:srcCompat="@drawable/ic_problem" />

    <ImageView
        android:id="@+id/img_check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="@+id/et_date"
        app:layout_constraintTop_toTopOf="@+id/et_date"
        app:srcCompat="@drawable/ic_problem" />

    <ImageView
        android:id="@+id/img_check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="@+id/et_cpn1"
        app:layout_constraintTop_toTopOf="@+id/et_cpn1"
        app:srcCompat="@drawable/ic_problem" />

    <ImageView
        android:id="@+id/img_check4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="@+id/et_cpn2"
        app:layout_constraintTop_toTopOf="@+id/et_cpn2"
        app:srcCompat="@drawable/ic_problem" />

    <ImageView
        android:id="@+id/img_check5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="@+id/et_cpn3"
        app:layout_constraintTop_toTopOf="@+id/et_cpn3"
        app:srcCompat="@drawable/ic_problem" />

</androidx.constraintlayout.widget.ConstraintLayout>